# Database (Render will provide this)
DATABASE_URL=postgresql://user:password@host:5432/database
DATABASE_URL_ASYNC=postgresql+asyncpg://user:password@host:5432/database

# Database Connection Pool
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# Security (GENERATE NEW SECRET KEY FOR PRODUCTION!)
SECRET_KEY=CHANGE_THIS_IN_PRODUCTION
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS (Your production frontend URL)
CORS_ORIGINS=["https://your-app.com","https://www.your-app.com"]

# Application
APP_NAME=Enterprise Messaging API
APP_VERSION=0.1.0
DEBUG=False
ENVIRONMENT=production

# Google OAuth (Use same credentials or create production ones)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://your-api.onrender.com/api/v1/auth/google/callback

# Frontend URL
FRONTEND_URL=https://your-app.com
```

